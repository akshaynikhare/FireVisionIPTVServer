# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/firevision-iptv

# API Configuration
API_KEY=your-secure-api-key-here-change-this
ALLOWED_ORIGINS=*

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-to-random-string
# Set to true only when using HTTPS in production
SESSION_SECURE_COOKIE=false

# Super Admin Credentials (Initial Setup)
# These credentials will be used to create the super admin user on first startup
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@firevision.local

# Google OAuth Configuration
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# GitHub OAuth Configuration
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/v1/auth/github/callback

# Facebook OAuth Configuration
# Get credentials from: https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/facebook/callback

# OAuth Success Redirect
# Where to redirect users after successful OAuth login
OAUTH_SUCCESS_REDIRECT=/dashboard
