# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/firevision-iptv

# CORS Configuration
ALLOWED_ORIGINS=*

# Super Admin Credentials (Initial Setup)
SUPER_ADMIN_USERNAME=admin
SUPER_ADMIN_PASSWORD=admin123
SUPER_ADMIN_EMAIL=admin@yourdomain.com
# Channel list code for super admin user (used for TV app authentication)
SUPER_ADMIN_CHANNEL_LIST_CODE=5T6FEP

# Legacy Playlist Code (Optional - for backward compatibility)
# If not set, will use SUPER_ADMIN_CHANNEL_LIST_CODE as fallback
# PLAYLIST_CODE=5T6FEP

# Google OAuth Configuration
# Get credentials from: https://console.developers.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8009/api/v1/auth/google/callback

# GitHub OAuth Configuration
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8009/api/v1/auth/github/callback


JWT_ACCESS_SECRET=your-access-secret
JWT_REFRESH_SECRET=your-refresh-secret